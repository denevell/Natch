<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm    
http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
    <entity class="org.denevell.natch.db.entities.UserEntity">
       <table name="UserEntity" />
	   <named-query name="findWithUsernamePassword">
	       <query>select u from UserEntity u where u.username=:username and u.password=:password</query>
	   </named-query>       
	   <named-query name="findExistingUsername">
	       <query>select u from UserEntity u where u.username=:username</query>
	   </named-query>       
       <attributes>
            <id name="username">
	           <column name="username" nullable="false" length="50" />
            </id>
	        <basic name="password">
	           <column name="password" nullable="false" length="100" />
	        </basic>       
       </attributes>
    </entity>    
    <entity class="org.denevell.natch.db.entities.PostEntity">
       <table name="PostEntity" />
       <attributes>
	       <id name="id">
	          <generated-value strategy="auto" />
	       </id>
	       <lob name="content">
	          <column name="content" nullable="false" />
	       </lob>
		   <element-collection name="tags" fetch="eager">
	          <column name="tags" nullable="true" />
		   </element-collection>
       </attributes>
	   <named-query name="findByModData">
	       <query>select p from PostEntity p order by p.modified desc</query>
	   </named-query>       
	   <named-query name="findByThreadId">
	       <query>select p from PostEntity p where p.threadId = :threadId order by p.created</query>
	   </named-query>       
	   <named-query name="findById">
	       <query>select p from PostEntity p where p.id = :id</query>
	   </named-query>       
    </entity>    
</entity-mappings>
