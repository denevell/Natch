<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
     version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
     <persistence-unit name="PERSISTENCE_UNIT_NAME" transaction-type="RESOURCE_LOCAL">
         <shared-cache-mode>NONE</shared-cache-mode>
	     <mapping-file>META-INF/mapping.xml</mapping-file>
	     <mapping-file>META-INF/userservice_mapping.xml</mapping-file>
	     <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	     <properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/testnatch" />
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.user" value="denevell" />
			<property name="javax.persistence.jdbc.password" value="user" />
			<property name="eclipselink.logging.level" value="ALL" />
	     </properties>
     </persistence-unit>     
</persistence>