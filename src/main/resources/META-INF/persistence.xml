<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
     version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
     <persistence-unit name="prod" transaction-type="RESOURCE_LOCAL">
	     <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	     <class>org.denevell.natch.db.entities.UserEntity</class>
	     <class>org.denevell.natch.db.entities.PostEntity</class>
	     <class>org.denevell.natch.db.entities.ThreadEntity</class>
	     <properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/prodnatch" />
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.user" value="denevell" />
			<property name="javax.persistence.jdbc.password" value="user" />
			<property name="eclipselink.ddl-generation" value="create-tables" /> 
			<property name="eclipselink.logging.level" value="ALL" />
	     </properties>
     </persistence-unit>     
     <persistence-unit name="test" transaction-type="RESOURCE_LOCAL">
         <shared-cache-mode>NONE</shared-cache-mode>
	     <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	     <class>org.denevell.natch.db.entities.UserEntity</class>
	     <class>org.denevell.natch.db.entities.PostEntity</class>
	     <class>org.denevell.natch.db.entities.ThreadEntity</class>
	     <properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/testnatch" />
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.user" value="denevell" />
			<property name="javax.persistence.jdbc.password" value="user" />
			<property name="eclipselink.ddl-generation" value="create-tables" /> 
			<property name="eclipselink.logging.level" value="ALL" />
	     </properties>
     </persistence-unit>     
</persistence>

