<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>hello</display-name>
	
	<filter>
	   <filter-name>Auth Filter</filter-name>
	   <filter-class>
	    org.denevell.natch.auth.LoginHeadersFilter
	   </filter-class>
	</filter>
	<filter-mapping>
	  <filter-name>Auth Filter</filter-name>
	  <url-pattern>/rest/user/logout</url-pattern>
	  <url-pattern>/rest/user/password</url-pattern>
	  <url-pattern>/rest/user/password/*</url-pattern>
	  <url-pattern>/rest/user/password_reset/remove/*</url-pattern>
	  <url-pattern>/rest/user/is</url-pattern>
	  <url-pattern>/rest/user/admin/toggle/*</url-pattern>
	  <url-pattern>/rest/post/add</url-pattern>
	  <url-pattern>/rest/user/list</url-pattern>
	  <url-pattern>/rest/post/addthread</url-pattern>
	  <url-pattern>/rest/thread/frompost</url-pattern>
	  <url-pattern>/rest/post/editthread/*</url-pattern>
	  <url-pattern>/rest/post/editpost/*</url-pattern>
	  <url-pattern>/rest/post/del/*</url-pattern>
	</filter-mapping>	
	
	<listener>
		<listener-class>org.denevell.natch.auth.LoginClearContextListener</listener-class>
	</listener>	
	
	<servlet>
		<servlet-name>Jersey REST Service</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer
		</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>org.denevell.natch.utils.JerseyApplication</param-value>
        </init-param>		
	    <init-param>
	        <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
	        <param-value>true</param-value>
	    </init-param>		
	    <init-param>
	    	<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>org.denevell.natch.serv.push;org.denevell.natch.serv.post.edit;org.denevell.natch.serv.thread;org.denevell.natch.serv.post.delete;org.denevell.natch.serv.testutils;org.denevell.natch.serv.post;org.denevell.natch.serv.thread;org.denevell.natch.serv.post;org.denevell.natch.serv.users;org.denevell.natch.serv.thread;org.denevell.natch.serv.posts;org.denevell.natch.utils</param-value>
	    </init-param>
	    <load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Jersey REST Service</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	
	<listener>
		<listener-class>org.denevell.natch.utils.JPAFactoryContextListener</listener-class>
	</listener>		
	
</web-app>
