<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>hello</display-name>
	
	<filter>
	   <filter-name>REST Logging Filter</filter-name>
	   <filter-class>
	    org.denevell.natch.utils.ExceptionLogger
	   </filter-class>
	</filter>
	<filter-mapping>
	  <filter-name>REST Logging Filter</filter-name>
	  <url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
	   <filter-name>Auth Filter</filter-name>
	   <filter-class>
	    org.denevell.natch.utils.LoginHeadersFilter
	   </filter-class>
	</filter>
	<filter-mapping>
	  <filter-name>Auth Filter</filter-name>
	  <url-pattern>/rest/post/add</url-pattern>
	  <url-pattern>/rest/post/addthread</url-pattern>
	  <url-pattern>/rest/post/editthread/*</url-pattern>
	  <url-pattern>/rest/post/del/*</url-pattern>
	  <url-pattern>/rest/thread/</url-pattern>
	  <url-pattern>/rest/thread</url-pattern>
	  <url-pattern>/rest/thread_edit/*</url-pattern>
	  <url-pattern>/rest/thread_add</url-pattern>
	  <url-pattern>/rest/thread_delete/*</url-pattern>
	  <url-pattern>/rest/post_edit/*</url-pattern>
	  <url-pattern>/rest/post_add</url-pattern>
	  <url-pattern>/rest/post_delete/*</url-pattern>
	  <url-pattern>/rest/thread_frompost</url-pattern>
	</filter-mapping>	
	
	<servlet>
		<servlet-name>Jersey REST Service</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer
		</servlet-class>
        <init-param>
  		      <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>org.denevell.natch.utils.JerseyApplication</param-value>
        </init-param>		
	    <init-param>
	    	<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>org.denevell.natch.serv;org.denevell.natch.utils</param-value>
	    </init-param>
        <load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Jersey REST Service</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>org.denevell.natch.utils.ManifestVars</listener-class>
	</listener>	
	
	<listener>
		<listener-class>org.denevell.natch.utils.JPAFactoryContextListener</listener-class>
	</listener>		
	
</web-app>
