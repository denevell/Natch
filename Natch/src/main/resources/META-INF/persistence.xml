<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
     version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
     <persistence-unit name="users" transaction-type="RESOURCE_LOCAL">
	     <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	     <class>org.denevell.natch.db.entities.UserEntity</class>
	     <mapping-file>META-INF/users_mapping.xml</mapping-file>
	     <properties>
			<property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC" />
			<property name="javax.persistence.jdbc.url" value="jdbc:sqlite:/var/lib/tomcat7/dbs/users.db" />
			<property name="eclipselink.logging.level" value="ALL" />
	     </properties>
     </persistence-unit>     
</persistence>
